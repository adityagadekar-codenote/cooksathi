<div class="max-w-2xl mx-auto">
  <div class="text-center mb-8">
    <h2 class="text-4xl font-bold text-gray-800 mb-2">Cooksathi</h2>
    <p class="text-gray-600">Your kitchen companion</p>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <%= form_with url: search_path, method: :post, local: true, class: "space-y-6" do |form| %>
      
      <div>
        <%= label_tag :ingredients, "What ingredients do you have?", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_field_tag :ingredients, "", 
            placeholder: "e.g., tomato, onion, garlic, rice", 
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent",
            required: true %>
        <p class="mt-1 text-sm text-gray-500">Separate ingredients with commas</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= label_tag :diet_type, "Diet Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= select_tag :diet_type, 
              options_for_select([["Veg", "veg"], ["Vegan", "vegan"]]), 
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
        </div>

        <div>
          <%= label_tag :max_time, "Maximum Time (minutes)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= number_field_tag :max_time, "", 
              placeholder: "e.g., 30", 
              min: 1,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
        </div>
      </div>

      <div>
        <%= form.submit "Find Recipes", class: "w-full bg-green-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-green-700 transition duration-200 cursor-pointer" %>
      </div>

    <% end %>
  </div>
</div>
