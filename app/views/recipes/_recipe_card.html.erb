<div class="card group">
  <div class="relative h-48 overflow-hidden">
    <%= image_tag "https://images.unsplash.com/photo-1546069901-ba9599a7e63c?w=500&h=300&fit=crop", 
        alt: recipe.name, 
        class: "w-full h-full object-cover group-hover:scale-110 transition duration-300" %>
    <div class="absolute top-3 left-3">
      <span class="badge <%= recipe.diet_type == 'vegan' ? 'badge-vegan' : recipe.diet_type == 'veg' ? 'badge-veg' : 'badge-non-veg' %>">
        <%= recipe.diet_type.upcase %>
      </span>
    </div>
    <div class="absolute top-3 right-3">
      <% if logged_in? && current_user.favorites.exists?(recipe: recipe) %>
        <%= button_to unfavorite_path(recipe), method: :delete, class: "w-8 h-8 rounded-full bg-white/90 flex items-center justify-center hover:bg-orange-500 hover:text-white transition" do %>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
        <% end %>
      <% else %>
        <%= button_to favorite_path(recipe), method: :post, class: "w-8 h-8 rounded-full bg-white/90 flex items-center justify-center hover:bg-orange-500 hover:text-white transition" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="p-5">
    <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-orange-500 transition">
      <%= link_to recipe.name, recipe_path(recipe) %>
    </h3>
    <% if recipe.description.present? %>
      <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= recipe.description %></p>
    <% end %>
    
    <div class="flex items-center justify-between text-sm text-gray-500">
      <div class="flex items-center space-x-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span><%= recipe.prep_time %> min</span>
      </div>
      <div class="flex items-center space-x-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        <span><%= recipe.ingredients.count %> ingredients</span>
      </div>
    </div>
    
    <div class="mt-4 flex items-center justify-between">
      <span class="text-xs text-gray-400">By <%= recipe.user&.name || "Cooksathi" %></span>
      <%= link_to "View Recipe â†’", recipe_path(recipe), class: "text-orange-500 hover:text-orange-600 text-sm font-medium transition" %>
    </div>
  </div>
</div>
