<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Recipe Header with Image -->
  <div class="relative rounded-2xl overflow-hidden mb-8 h-64 md:h-96">
    <%= image_tag "https://images.unsplash.com/photo-1546069901-ba9599a7e63c?w=1200&h=600&fit=crop", 
        alt: @recipe.name, 
        class: "w-full h-full object-cover" %>
    <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
    <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8">
      <div class="flex items-center space-x-2 mb-3">
        <% if @recipe.visibility == 'public' %>
          <span class="badge bg-orange-500 text-white">MOST POPULAR</span>
        <% end %>
      </div>
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-2"><%= @recipe.name %></h1>
      <% if @recipe.description.present? %>
        <p class="text-gray-200 text-sm md:text-base max-w-2xl"><%= @recipe.description %></p>
      <% end %>
    </div>
  </div>
  
  <!-- Recipe Meta Info -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-white rounded-xl shadow-sm p-4 flex items-center space-x-3">
      <div class="w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0">
        <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <p class="text-xs text-gray-500 uppercase font-semibold">Prep Time</p>
        <p class="font-semibold text-gray-900"><%= @recipe.prep_time %> mins</p>
      </div>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm p-4 flex items-center space-x-3">
      <div class="w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0">
        <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <div>
        <p class="text-xs text-gray-500 uppercase font-semibold">Difficulty</p>
        <p class="font-semibold text-gray-900">Easy</p>
      </div>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm p-4 flex items-center space-x-3">
      <div class="w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0">
        <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
      </div>
      <div>
        <p class="text-xs text-gray-500 uppercase font-semibold">Visibility</p>
        <p class="font-semibold text-gray-900 capitalize"><%= @recipe.visibility %></p>
      </div>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm p-4 flex items-center space-x-3">
      <div class="w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0">
        <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
      </div>
      <div>
        <p class="text-xs text-gray-500 uppercase font-semibold">Diet</p>
        <p class="font-semibold text-gray-900 capitalize"><%= @recipe.diet_type %></p>
      </div>
    </div>
  </div>
  
  <!-- Author and Actions -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8 pb-8 border-b border-gray-100">
    <div class="flex items-center space-x-4">
      <div class="w-12 h-12 rounded-full bg-orange-100 flex items-center justify-center text-orange-600 font-bold text-lg">
        <%= (@recipe.user&.name || "C")[0].upcase %>
      </div>
      <div>
        <p class="font-semibold text-gray-900"><%= @recipe.user&.name || "Cooksathi" %></p>
        <p class="text-sm text-gray-500">Culinary Arts Professional â€¢ <%= @recipe.user&.recipes&.count || 0 %> recipes</p>
      </div>
    </div>
    
    <div class="flex items-center space-x-3">
      <% if logged_in? %>
        <% if @is_favorite %>
          <%= button_to unfavorite_path(@recipe), method: :delete, class: "flex items-center space-x-2 px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white rounded-full transition" do %>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
            <span>Saved to Favorites</span>
          <% end %>
        <% else %>
          <%= button_to favorite_path(@recipe), method: :post, class: "flex items-center space-x-2 px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white rounded-full transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
            <span>Save to Favorites</span>
          <% end %>
        <% end %>
      <% end %>
      
      <% if logged_in? && current_user == @recipe.user %>
        <%= link_to edit_recipe_path(@recipe), class: "px-4 py-2 bg-white border border-gray-200 hover:border-orange-500 text-gray-700 rounded-full transition" do %>
          Edit Recipe
        <% end %>
        <%= button_to @recipe, method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-white border border-red-200 hover:bg-red-50 text-red-600 rounded-full transition" do %>
          Delete
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Ingredients Section -->
    <div class="lg:col-span-1">
      <div class="bg-orange-50 rounded-xl p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
          <svg class="w-6 h-6 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          Ingredients
        </h2>
        
        <ul class="space-y-3">
          <% @recipe.ingredients.each do |ingredient| %>
            <li class="flex items-center justify-between bg-white rounded-lg px-4 py-3">
              <span class="text-gray-700 font-medium"><%= ingredient.name %></span>
              <% if @user_ingredients.any? && !@user_ingredients.include?(ingredient.name.downcase) %>
                <span class="text-xs px-2 py-1 bg-orange-100 text-orange-600 rounded-full">Missing</span>
              <% end %>
            </li>
          <% end %>
        </ul>
        
        <% if @user_ingredients.any? && @missing_ingredients.any? %>
          <div class="mt-4 pt-4 border-t border-orange-200">
            <button class="w-full py-2 px-4 bg-orange-100 hover:bg-orange-200 text-orange-600 rounded-lg font-medium text-sm transition">
              + Add missing items to cart
            </button>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Instructions Section -->
    <div class="lg:col-span-2">
      <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
        <svg class="w-6 h-6 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        Instructions
      </h2>
      
      <div class="space-y-6">
        <% @recipe.instructions.split(/\n/).reject(&:blank?).each_with_index do |instruction, index| %>
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 rounded-full bg-orange-500 text-white flex items-center justify-center font-bold text-sm">
                <%= index + 1 %>
              </div>
            </div>
            <div class="flex-1 pt-1">
              <p class="text-gray-700 leading-relaxed"><%= instruction.gsub(/^\d+\.\s*/, '').strip %></p>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Chef's Note -->
      <div class="mt-8 bg-gray-900 rounded-xl p-6 text-white">
        <div class="flex items-start space-x-3">
          <svg class="w-5 h-5 text-orange-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z"/>
          </svg>
          <div>
            <h4 class="font-semibold mb-2">Chef's Note:</h4>
            <p class="text-gray-300 text-sm italic">"For best results, use fresh ingredients and adjust seasoning to taste. The key to this dish is patience and proper heat management."</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
