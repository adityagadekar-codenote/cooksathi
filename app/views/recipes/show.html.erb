<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="p-8">
      <div class="flex justify-between items-start mb-6">
        <h1 class="text-3xl font-bold text-gray-800"><%= @recipe.name %></h1>
        <div class="flex items-center gap-2">
          <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm capitalize"><%= @recipe.diet_type %></span>
          <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm capitalize"><%= @recipe.visibility %></span>
        </div>
      </div>

      <% if @recipe.description.present? %>
        <p class="text-gray-600 mb-6"><%= @recipe.description %></p>
      <% end %>

      <div class="flex items-center gap-6 text-sm text-gray-500 mb-6">
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <%= @recipe.prep_time %> minutes
        </span>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          By <%= @recipe.user&.name || "Cooksathi" %>
        </span>
      </div>

      <% if logged_in? && !@is_favorite %>
        <%= button_to "Save to Favorites", favorite_path(@recipe), method: :post, class: "mb-6 bg-green-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-green-700 transition duration-200 cursor-pointer" %>
      <% elsif logged_in? && @is_favorite %>
        <%= button_to "Remove from Favorites", unfavorite_path(@recipe), method: :delete, class: "mb-6 bg-red-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-red-700 transition duration-200 cursor-pointer" %>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <div>
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Ingredients</h2>
          <ul class="space-y-2">
            <% @recipe.ingredients.each do |ingredient| %>
              <li class="flex items-center">
                <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
                <%= ingredient.name %>
              </li>
            <% end %>
          </ul>
        </div>

        <% if @user_ingredients.any? %>
          <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-4">
              <% if @matched_ingredients.any? %>Matched Ingredients<% else %>Missing Ingredients<% end %>
            </h2>
            <ul class="space-y-2">
              <% if @matched_ingredients.any? %>
                <% @matched_ingredients.each do |ingredient| %>
                  <li class="flex items-center text-green-600">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <%= ingredient.name %>
                  </li>
                <% end %>
              <% end %>
              <% if @missing_ingredients.any? %>
                <% @missing_ingredients.each do |ingredient| %>
                  <li class="flex items-center text-red-600">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    <%= ingredient.name %>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

      <div class="mb-8">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Instructions</h2>
        <div class="prose max-w-none">
          <%= simple_format(@recipe.instructions) %>
        </div>
      </div>

      <% if logged_in? && current_user == @recipe.user %>
        <div class="flex gap-4 pt-6 border-t">
          <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: "bg-green-600 text-white py-2 px-6 rounded-lg font-semibold hover:bg-green-700 transition duration-200" %>
          <%= button_to "Delete Recipe", @recipe, method: :delete, class: "bg-red-600 text-white py-2 px-6 rounded-lg font-semibold hover:bg-red-700 transition duration-200", data: { confirm: "Are you sure you want to delete this recipe?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
