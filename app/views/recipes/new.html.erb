<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Create New Recipe</h1>
    <p class="text-gray-600">Share your culinary masterpiece with our food-loving community.</p>
  </div>
  
  <div class="bg-white rounded-2xl shadow-sm p-8">
    <%= form_with model: @recipe, local: true, class: "space-y-8" do |form| %>
      <% if @recipe.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 py-4 px-6 rounded-lg">
          <h3 class="font-semibold text-red-800 mb-2"><%= pluralize(@recipe.errors.count, "error") %> prevented saving:</h3>
          <ul class="list-disc list-inside text-red-700 text-sm">
            <% @recipe.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <!-- Recipe Name -->
      <div>
        <%= form.label :name, "Recipe Name", class: "block text-sm font-semibold text-gray-900 mb-2" %>
        <%= form.text_field :name,
            placeholder: "e.g., Grandma's Secret Pasta",
            class: "w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-orange-50",
            required: true %>
      </div>
      
      <!-- Description -->
      <div>
        <%= form.label :description, "Description", class: "block text-sm font-semibold text-gray-900 mb-2" %>
        <%= form.text_area :description,
            placeholder: "Briefly describe the flavor, origin, or why this dish is special...",
            rows: 3,
            class: "w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-orange-50" %>
      </div>
      
      <!-- Prep Time and Diet Type -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :prep_time, "Prep Time (minutes)", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <%= form.number_field :prep_time,
                placeholder: "45",
                min: 1,
                class: "w-full pl-12 pr-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-orange-50",
                required: true %>
          </div>
        </div>
        
        <div>
          <%= form.label :diet_type, "Diet Type", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <div class="flex gap-3">
            <label class="flex-1 cursor-pointer">
              <%= form.radio_button :diet_type, "veg", class: "peer sr-only" %>
              <div class="px-4 py-3 border-2 border-gray-200 rounded-lg text-center peer-checked:border-orange-500 peer-checked:bg-orange-50 transition hover:border-gray-300">
                <div class="flex items-center justify-center space-x-2">
                  <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                  </svg>
                  <span class="font-medium text-gray-700 peer-checked:text-orange-600">Veg</span>
                </div>
              </div>
            </label>
            <label class="flex-1 cursor-pointer">
              <%= form.radio_button :diet_type, "vegan", class: "peer sr-only" %>
              <div class="px-4 py-3 border-2 border-gray-200 rounded-lg text-center peer-checked:border-orange-500 peer-checked:bg-orange-50 transition hover:border-gray-300">
                <div class="flex items-center justify-center space-x-2">
                  <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17 8C8 10 5.9 16.17 3.82 21.34l1.89.66l.95-2.3c.48.17.98.3 1.34.3C19 20 22 3 22 3c-1 2-8 2.25-13 3.25S2 11.5 2 13.5s1.75 3.75 1.75 3.75C7 8 17 8 17 8z"/>
                  </svg>
                  <span class="font-medium text-gray-700 peer-checked:text-orange-600">Vegan</span>
                </div>
              </div>
            </label>
            <label class="flex-1 cursor-pointer">
              <%= form.radio_button :diet_type, "non-veg", class: "peer sr-only" %>
              <div class="px-4 py-3 border-2 border-gray-200 rounded-lg text-center peer-checked:border-orange-500 peer-checked:bg-orange-50 transition hover:border-gray-300">
                <div class="flex items-center justify-center space-x-2">
                  <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                  </svg>
                  <span class="font-medium text-gray-700 peer-checked:text-orange-600">Non-Veg</span>
                </div>
              </div>
            </label>
          </div>
        </div>
      </div>
      
      <!-- Ingredients -->
      <div>
        <%= label_tag :ingredients_list, "Ingredients", class: "block text-sm font-semibold text-gray-900 mb-2" %>
        <div class="mb-3">
          <div id="ingredient-tags" class="flex flex-wrap gap-2 mb-3">
            <!-- Tags will be added here dynamically -->
          </div>
        </div>
        <%= text_field_tag :ingredients_list, nil,
            placeholder: "Add ingredients, separated by commas...",
            class: "w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-orange-50",
            required: true %>
        <p class="mt-2 text-sm text-gray-500">Separate ingredients with commas. New ingredients will be created automatically.</p>
      </div>
      
      <!-- Instructions -->
      <div>
        <%= form.label :instructions, "Cooking Instructions", class: "block text-sm font-semibold text-gray-900 mb-2" %>
        <%= form.text_area :instructions,
            placeholder: "Step 1: Boil the water...\nStep 2: Add salt...\nStep 3: ...",
            rows: 8,
            class: "w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-orange-50 font-mono text-sm",
            required: true %>
      </div>
      
      <!-- Visibility Toggle -->
      <div class="flex items-center justify-between py-6 border-t border-gray-100">
        <div class="flex items-center space-x-4">
          <div>
            <%= form.label :visibility, "Visibility", class: "block text-sm font-semibold text-gray-900" %>
            <p class="text-sm text-gray-500">Choose who can see this recipe</p>
          </div>
        </div>
        <div class="flex items-center space-x-3">
          <div class="flex items-center">
            <%= form.radio_button :visibility, "private", class: "text-orange-500 focus:ring-orange-500" %>
            <%= form.label :visibility_private, "Private", class: "ml-2 text-sm text-gray-700 cursor-pointer" %>
          </div>
          <div class="flex items-center">
            <%= form.radio_button :visibility, "public", checked: true, class: "text-orange-500 focus:ring-orange-500" %>
            <%= form.label :visibility_public, "Public", class: "ml-2 text-sm text-gray-700 cursor-pointer" %>
          </div>
          <div class="text-xs text-gray-500 flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            Visible to all users
          </div>
        </div>
      </div>
      
      <!-- Submit Buttons -->
      <div class="flex gap-4 pt-6 border-t border-gray-100">
        <%= form.submit "Publish Recipe", class: "btn-primary flex-1 py-3 cursor-pointer" %>
        <%= link_to "Save Draft", "#", class: "btn-secondary flex-1 text-center py-3" %>
      </div>
    <% end %>
    
    <!-- Security Info -->
    <div class="mt-8 flex items-center justify-center space-x-6 text-xs text-gray-500">
      <div class="flex items-center space-x-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
        <span>SAFE & SECURE</span>
      </div>
      <div class="flex items-center space-x-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
        </svg>
        <span>AUTO-SAVING DRAFTS</span>
      </div>
    </div>
  </div>
</div>

<script>
  // Simple ingredient tag preview
  const ingredientInput = document.querySelector('#ingredients_list');
  const tagsContainer = document.getElementById('ingredient-tags');
  
  if (ingredientInput && tagsContainer) {
    ingredientInput.addEventListener('blur', function() {
      const ingredients = this.value.split(',').map(i => i.trim()).filter(i => i);
      tagsContainer.innerHTML = ingredients.map(ing => 
        `<span class="px-3 py-1 bg-orange-100 text-orange-700 rounded-full text-sm">${ing}</span>`
      ).join('');
    });
  }
</script>
