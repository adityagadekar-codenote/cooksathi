<div class="max-w-6xl mx-auto">
  <h2 class="text-3xl font-bold text-gray-800 mb-6">My Favorites</h2>

  <% if @favorites.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @favorites.each do |recipe| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">
              <%= link_to recipe.name, recipe_path(recipe), class: "hover:text-green-600" %>
            </h3>
            <p class="text-gray-600 text-sm mb-4"><%= recipe.description %></p>
            
            <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
              <span><%= recipe.prep_time %> min</span>
              <span class="capitalize"><%= recipe.diet_type %></span>
              <span class="capitalize"><%= recipe.visibility %></span>
            </div>

            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-400">By <%= recipe.user&.name || "Cooksathi" %></span>
              <%= button_to "Remove", unfavorite_path(recipe), method: :delete, class: "text-red-600 hover:text-red-800 text-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-8 text-center">
      <p class="text-gray-600 mb-4">You haven't saved any favorites yet.</p>
      <%= link_to "Browse Recipes", recipes_path, class: "inline-block bg-green-600 text-white py-2 px-6 rounded-lg font-semibold hover:bg-green-700" %>
    </div>
  <% end %>
</div>
