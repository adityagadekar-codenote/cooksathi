<div class="min-h-screen bg-white">
  <div class="flex flex-col lg:flex-row min-h-screen">
    <!-- Left Side - Image -->
    <div class="lg:w-1/2 relative bg-gradient-to-br from-green-900 to-green-800 flex items-center justify-center p-12">
      <div class="absolute inset-0">
        <%= image_tag "https://images.unsplash.com/photo-1556910103-1c02745a30bf?w=800&h=1200&fit=crop", 
            alt: "Fresh vegetables", 
            class: "w-full h-full object-cover opacity-30" %>
      </div>
      
      <div class="relative z-10 text-white max-w-md">
        <div class="flex items-center space-x-3 mb-8">
          <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C8.5 2 6 4 6 6.5c0 1.5.8 2.8 2 3.6V12H7c-1.7 0-3 1.3-3 3v2h16v-2c0-1.7-1.3-3-3-3h-1V10.1c1.2-.8 2-2.1 2-3.6C18 4 15.5 2 12 2zm0 2c2.3 0 4 1.1 4 2.5S14.3 9 12 9 8 7.9 8 6.5 9.7 4 12 4zM7 15h10v2H7v-2z"/>
              <path d="M12 11c-2.7 0-5 2.2-5 5v1h10v-1c0-2.8-2.3-5-5-5zm0 2c1.7 0 3 1.3 3 3H9c0-1.7 1.3-3 3-3z"/>
            </svg>
          </div>
          <span class="text-2xl font-bold text-white">COOKSATHI</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
          Master the art of<br>
          <span class="text-orange-500">home cooking.</span>
        </h1>
        
        <p class="text-lg text-gray-300">
          Join millions of home chefs sharing recipes, tips, and culinary inspiration every day.
        </p>
      </div>
    </div>
    
    <!-- Right Side - Form -->
    <div class="lg:w-1/2 flex items-center justify-center p-8 lg:p-16">
      <div class="w-full max-w-md">
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Sign Up</h1>
          <p class="text-gray-600">Create your account to start your culinary journey.</p>
        </div>
        
        <%= form_with model: @user, url: users_path, method: :post, local: true, class: "space-y-5" do |form| %>
          <% if @user.errors.any? %>
            <div class="bg-red-50 border-l-4 border-red-500 py-4 px-6 rounded-lg mb-6">
              <h3 class="font-semibold text-red-800 mb-2"><%= pluralize(@user.errors.count, "error") %> prevented signup:</h3>
              <ul class="list-disc list-inside text-red-700 text-sm">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div>
            <%= form.label :name, "FULL NAME", class: "block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <%= form.text_field :name,
                  placeholder: "Enter your full name",
                  class: "w-full pl-12 pr-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent",
                  required: true %>
            </div>
          </div>
          
          <div>
            <%= form.label :email, "EMAIL ADDRESS", class: "block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <%= form.email_field :email,
                  placeholder: "you@example.com",
                  class: "w-full pl-12 pr-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent",
                  required: true %>
            </div>
          </div>
          
          <div>
            <%= form.label :password, "PASSWORD", class: "block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
              <%= form.password_field :password,
                  placeholder: "Create a strong password",
                  id: "password",
                  class: "w-full pl-12 pr-12 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent",
                  required: true,
                  minlength: 6 %>
              <button type="button" id="togglePassword" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                <svg class="w-5 h-5" id="eyeIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <svg class="w-5 h-5 hidden" id="eyeOffIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                </svg>
              </button>
            </div>
            <p class="mt-2 text-xs text-gray-500 flex items-center">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              Must be at least 6 characters
            </p>
          </div>
          
          <div class="flex items-center">
            <%= check_box_tag :terms, "1", false, class: "h-4 w-4 text-orange-500 focus:ring-orange-500 border-gray-300 rounded", required: true %>
            <%= label_tag :terms, "I agree to the", class: "ml-2 block text-sm text-gray-600" %>
            <%= link_to "Terms of Service", "#", class: "text-orange-500 hover:text-orange-600 text-sm mx-1" %>
            <span class="text-sm text-gray-600">and</span>
          </div>
          
          <div>
            <%= form.submit "Create Account", class: "w-full btn-primary py-3 flex items-center justify-center cursor-pointer" do %>
              <span>Create Account</span>
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            <% end %>
          </div>
        <% end %>
        
        <p class="mt-8 text-center text-sm text-gray-600">
          Already have an account? <%= link_to "Log In", login_path, class: "text-orange-500 hover:text-orange-600 font-semibold" %>
        </p>
      </div>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const toggleBtn = document.getElementById('togglePassword');
      const passwordInput = document.getElementById('password');
      const eyeIcon = document.getElementById('eyeIcon');
      const eyeOffIcon = document.getElementById('eyeOffIcon');
      
      if (toggleBtn && passwordInput) {
        toggleBtn.addEventListener('click', function() {
          const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
          passwordInput.setAttribute('type', type);
          eyeIcon.classList.toggle('hidden');
          eyeOffIcon.classList.toggle('hidden');
        });
      }
    });
  </script>
</div>
